  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch My Site",
      "type": "php",
      "request": "launch",
      "runtimeArgs": [
        "-S",
        "localhost:8080"
      ],
      "program": "",
      "cwd": "${workspaceRoot}/site",
      "serverReadyAction": {
        "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Debug My Site",
      "type": "php",
      "request": "launch",
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes",
        "-S",
        "localhost:8080"
      ],
      "program": "",
      "cwd": "${workspaceRoot}/site",
      "port": 9000,
      "serverReadyAction": {
        "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }    
  ]
}